{
    "name": "<%ADFPipelineName%>",
    "properties": {
        "activities": [
            {
                "name": "Copy_<%ADFTableName%>_Append",
                "type": "Copy",
                "dependsOn": [],
                "policy": {
                    "timeout": "0.12:00:00",
                    "retry": 0,
                    "retryIntervalInSeconds": 30
                },
                "typeProperties": {
                    "source": {
                        "type": "<%ADFCopySourceType%>",
                        "<%ADFSqlType%>": "<%ADFSQLScript%>"
                    },
                  "sink": {
                    "type": "<%ADFAzureFileTypeName%>Sink",
                    "writeBatchSize": "@pipeline().parameters.WriteBatchSize"                    
                  },
                    "enableStaging": false,
                    "cloudDataMovementUnits": 0
                },
                "inputs": [
                    {
                        "referenceName": "<%ADFSourceDatasetName%>",
                        "type": "DatasetReference",
                         "parameters": {
                            "TableName": "<%ADFSourceTable%>"
                        }
                    }
                ],
                "outputs": [
                    {
                        "referenceName": "<%ADFDestinationDatasetName%>",
                        "type": "DatasetReference",
                        "parameters": {
                            "FileSystemName": "<%ADFFileSystem%>",
                            "FolderName": "append",
                            "FileName": "<%ADFAppendFileName%>"
                        }
                    }
                ]
            },
	    {
                "name": "Copy_<%ADFTableName%>",
                "type": "Copy",
                "dependsOn": [
                    {
                        "activity": "Copy_<%ADFTableName%>_Append",
                        "dependencyConditions": [
                            "Succeeded"
                        ]
                    }
                ],
                "policy": {
                    "timeout": "0.12:00:00",
                    "retry": 0,
                    "retryIntervalInSeconds": 30
                },
                "userProperties": [],
                "typeProperties": {
                    "source": {
                        "type": "<%ADFAzureFileTypeName%>Source",
                        "storeSettings": {
                            "type": "AzureBlobFSReadSettings",
                            "recursive": false,
                            "enablePartitionDiscovery": false
                        },
                        "formatSettings": {
                            "type": "AzureBlobFSReadSettings"
                        }
                    },
                    "sink": {
                        "type": "<%ADFAzureFileTypeName%>Sink",
                        "storeSettings": {
                            "type": "AzureBlobFSWriteSettings",
                            "copyBehavior": "MergeFiles"
                        },
                        "formatSettings": {
                            "type": "AzureBlobFSWriteSettings",
                            "quoteAllText": true,
                            "fileExtension": "<%ADFFileExtension%>"
                        }
                    },
                    "enableStaging": false,
                    "dataIntegrationUnits": 0
                },
                "inputs": [
                    {
                        "referenceName": "<%ADFDestinationDatasetName%>",
                        "type": "DatasetReference",
                        "parameters": {
                            "FileSystemName": "<%ADFFileSystem%>",
                            "FolderName": "append",
                            "FileName": "<%ADFAppendFileName%>"
                        }
                    }
                ],
                "outputs": [
                    {
                        "referenceName": "<%ADFDestinationDatasetName%>",
                        "type": "DatasetReference",
                        "parameters": {
                            "FileSystemName": "<%ADFFileSystem%>",
                            "FolderName": "<%ADFFileFolder%>",
                            "FileName": "<%ADFFileName%>"
                        }
                    }
                ]
            },
            {
                "name": "Delete Append",
                "type": "Delete",
                "dependsOn": [
                    {
                        "activity": "Copy_<%ADFTableName%>",
                        "dependencyConditions": [
                            "Succeeded"
                        ]
                    }
                ],
                "policy": {
                    "timeout": "0.12:00:00",
                    "retry": 0,
                    "retryIntervalInSeconds": 30,
                    "secureOutput": false,
                    "secureInput": false
                },
                "userProperties": [],
                "typeProperties": {
                    "dataset": {
                        "referenceName": "<%ADFDestinationDatasetName%>",
                        "type": "DatasetReference",
                        "parameters": {
                            "FileSystemName": "<%ADFFileSystem%>",
                            "FolderName": "append",
                            "FileName": "<%ADFAppendFileName%>"
                        }
                    },
                    "enableLogging": false,
                    "storeSettings": {
                        "type": "AzureBlobFSReadSettings",
                        "recursive": false
                    }
                }
            }
        ],
      "parameters": {        
        "WriteBatchSize": {
          "type": "Int",
	  "defaultValue": 10000,
          "identity": "WriteBatchSize"
        }
      },
	  "folder": {
            "name": "<%ADFFolderName%>"
        }
    }
}